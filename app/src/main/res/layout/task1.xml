<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:rowCount="6"
    android:columnCount="4"
    android:paddingBottom="50dp">
    <TextView
        android:id="@+id/result"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_rowWeight="2"
        android:layout_columnSpan="4"
        android:layout_columnWeight="4"
        android:textSize="40sp"
        android:gravity="bottom"
        android:padding="20dp">
    </TextView>
    <Button
        android:layout_row="2"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="1"
        android:tooltipText="1"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="2"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="2"
        android:tooltipText="2"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="2"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="3"
        android:tooltipText="3"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="2"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+"
        android:tooltipText="+"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#551111"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="4"
        android:tooltipText="4"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="3"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="5"
        android:tooltipText="5"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="3"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="6"
        android:tooltipText="6"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="3"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="-"
        android:tooltipText="-"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#551111"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="4"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="7"
        android:tooltipText="7"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="4"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="8"
        android:tooltipText="8"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="4"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="9"
        android:tooltipText="9"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="4"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="*"
        android:tooltipText="*"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#551111"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="5"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="C"
        android:tooltipText="C"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#115511"
        android:onClick="clearClick">
    </Button>
    <Button
        android:layout_row="5"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="0"
        android:tooltipText="0"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#111155"
        android:onClick="buttonClick">
    </Button>
    <Button
        android:layout_row="5"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="="
        android:tooltipText="="
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#115511"
        android:onClick="resultClick">
    </Button>
    <Button
        android:layout_row="5"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="/"
        android:tooltipText="/"
        tools:ignore="HardcodedText"
        android:layout_margin="5dp"
        android:backgroundTint="#551111"
        android:onClick="buttonClick">
    </Button>
</GridLayout>
